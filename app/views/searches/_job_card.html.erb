<div class="job-card-content">
  <%= link_to "https://#{job.job_website + job.link}", target: "_blank" do %>
    <div class="job-title">
      <p class="name"><b><%= job.title.truncate(job.title_length) %></b></p>
    </div>
    <div class="job-info">
      <p><%= job.salary %></p>
      <p><%= job.company %></p>
      <% if job.quality > 3 %>
        <p><%= job.description %></p>
      <% end %>
    </div>
  <% end %>
</div>
